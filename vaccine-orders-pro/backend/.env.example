# Django environment variables for development
# Copy this file to .env and update values as needed for local development

# Django settings
DEBUG=True
SECRET_KEY=your-secret-key-here

# Database (for local development with SQLite, leave DATABASE_URL unset)
# For PostgreSQL on Render:
# DATABASE_URL=postgresql://user:password@host:5432/database_name

# Allowed hosts (comma-separated)
ALLOWED_HOSTS=localhost,127.0.0.1,192.168.100.35

# CORS settings (for local development)
CORS_ALLOWED_ORIGINS=http://localhost:8080,http://localhost:8081

# CSRF trusted origins
CSRF_TRUSTED_ORIGINS=http://localhost:8080,http://localStorage:8081
